{
  "name": "bcbox-app",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "author": "NR Common Service Showcase <NR.CommonServiceShowcase@gov.bc.ca>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "cd ../frontend && npm run rebuild",
    "clean": "rimraf coverage dist",
    "debug": "nodemon --inspect ./bin/www",
    "lint": "eslint . **/www* --no-fix --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "lint:fix": "eslint . **/www* --fix --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "prebuild": "npm run lint",
    "prelint": "npm run typecheck",
    "pretest": "npm run lint",
    "posttest": "ts-node ./lcov-fix.ts",
    "purge": "rimraf node_modules",
    "rebuild": "npm run clean && npm run build",
    "reinstall": "npm run purge && npm install",
    "serve": "ts-node-dev --respawn --transpile-only ./bin/www",
    "start": "ts-node --transpile-only ./bin/www",
    "test": "jest --verbose --forceExit --detectOpenHandles",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "api-problem": "^9.0.1",
    "axios": "^1.1.3",
    "compression": "^1.7.4",
    "config": "^3.3.8",
    "express": "^4.18.2",
    "express-winston": "^4.2.0",
    "ts-node": "^10.9.1",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/compression": "^1.7.2",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.26.0",
    "eslint-config-recommended": "^4.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
